<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FieldTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/default_size_triple</item>
        <item name="android:layout_marginTop">@dimen/default_size_sextuple</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="FieldProgress" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">@dimen/default_size_quadruple</item>
        <item name="android:layout_height">@dimen/default_size_quadruple</item>
        <item name="android:layout_marginStart">@dimen/default_size</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/design_default_color_primary</item>
    </style>

    <style name="FieldValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>
</resources>
